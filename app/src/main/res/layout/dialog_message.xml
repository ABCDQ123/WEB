<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="100dp">

    <androidx.cardview.widget.CardView
        android:layout_width="240dp"
        android:layout_height="100dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_dialog_message_title"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center"
                android:textColor="@color/txt_black"
                android:textSize="14sp" />

            <View
                android:id="@+id/v_dialog_message_mid"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_dialog_message_title"
                android:background="@color/white"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/v_dialog_message_mid">

                <TextView
                    android:id="@+id/tv_dialog_message_cancel"
                    android:layout_width="119dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textColor="@color/txt_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_dialog_message_sure"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="@color/txt_gray"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_dialog_message_sure"
                    android:background="@color/white"></View>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
